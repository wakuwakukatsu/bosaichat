<div class = header>
  <p class = title>防災くん</p>
  <p id = sub-title>災害情報共有サイト</p>
  <p id = user-name>
  <% if user_signed_in? %>
    <%= current_user.name %>
  <% end %>
  </p>
</div>

<div class = main>
  <div class = side-bar>
  <% if user_signed_in? %>
    <div class = user-box>
      <div id = sign-out>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      </div>
    </div>
    <div id = watch-info>
      <%= link_to '災害情報を見る', comments_path %>
    </div>
    <div id = post-info>
      災害情報を投稿する
    </div>
    <div id = weather>
      天気・地図
    </div>
  <% else %>
    <div class = user-box>
      <div id = sign-up>
        <%= link_to '新規登録', new_user_registration_path %>
      </div>
      <div id = sign-in>
        <%= link_to 'ログイン', new_user_session_path %>
      </div>
    </div>
    <div id = watch-info>
      <%= link_to '災害情報を見る', comments_path %>
    </div>
    <div id = weather>
      天気・地図
    </div>
  <% end %>   
  </div>

  <div class = main-content>
    <%= render partial: "photos" %>
    <div class = messages>
      <%= render partial: "posts" %>
    </div>
    <div class = input-box>
      <div class="popup-overlay">
        <div class="popup-content">
          <%= form_for @post do |f| %>
            <%= f.text_field :area, class: 'input-box_area', placeholder: '地域を入力' %>
            <%= f.text_field :title, class: 'input-box_title', placeholder: 'タイトルを入力' %>
            <%= f.text_area :content, class: 'input-box_text', placeholder: '情報を入力' %>
            <%= f.label :image, class: 'input-box_image' do %>
              <%= icon('far', 'image', class: 'syashin') %>
              <%= f.file_field :image, class: 'hidden' %>
            <% end %>
          <%= f.submit '投稿', class: 'submit-btn' %>
          <% end %>
          <button class="close">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class = footer>
  一人でも多くの人のために災害情報を共有しましょう
</div>
<%= render partial: "maps" %>
